<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScorllView.MyScorllView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">

                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/point1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="30dp"
                            android:src="@drawable/ws"/>
                        <ImageView
                            android:id="@+id/point2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="30dp"
                            android:src="@drawable/ws"/>
                        <ImageView
                            android:id="@+id/point3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="30dp"
                            android:src="@drawable/ws"/>
                        <ImageView
                            android:id="@+id/point4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ws"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <GridView
                android:id="@+id/gridView"
                android:numColumns="4"
                android:columnWidth="140dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="170dp">
            </GridView>


            <RelativeLayout
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/c1"
                    android:layout_width="10dp"
                    android:background="#28C277"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_toRightOf="@+id/c1"
                    android:text="最新课程"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/new1_image"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:id="@+id/new1_text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/new2_image"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/new2_text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/new3_image"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:id="@+id/new3_text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/new4_image"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:id="@+id/new4_text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="#E6E6FA"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/c2"
                        android:layout_width="10dp"
                        android:background="#28C277"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_toRightOf="@+id/c2"
                        android:text="好课推荐"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img1"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text1"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img2"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text2"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img3"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text3"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img4"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text4"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:background="#E6E6FA"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/c3"
                        android:layout_width="10dp"
                        android:background="#28C277"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_toRightOf="@+id/c3"
                        android:text="精品课程"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img5"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text5"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img6"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text6"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img7"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text7"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ma_img8"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/ma_text8"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </RelativeLayout>
        </LinearLayout>
    </ScorllView.MyScorllView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/toplayout"
        android:gravity="center_horizontal"
        android:layout_height="75dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="75dp">

        <EditText
            android:singleLine="true"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/et_sousuo"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_editview"
            android:drawableLeft="@drawable/so"
            android:hint="云课堂"
            />
        <TextView
            android:id="@+id/sousuo"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/et"
            android:text="搜索"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progress_load"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/load"
            android:text="加载中..."
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>