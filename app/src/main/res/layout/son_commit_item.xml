<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/son_commit_head"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ac"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/son_commit_name"
                android:text="我是程序员："
                android:layout_marginLeft="10dp"
                android:textColor="#28C277"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/son_commit_context"
                android:layout_marginLeft="20dp"
                android:text="你说得比较片面了一点啊，Java编程思想"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/comiit"
                android:layout_width="15dp"
                android:layout_gravity="center_vertical"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/son_commit_com"
                android:text="回复"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/son_commit_time"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="2016-10-26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>